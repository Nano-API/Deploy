{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmitOnError": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "target": "ES2020",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/tests/**/*"]
}